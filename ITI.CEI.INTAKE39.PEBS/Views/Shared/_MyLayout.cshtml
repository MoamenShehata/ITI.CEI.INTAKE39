<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/MyContent/css")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr"
          crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">

    @*@Scripts.Render("~/bundles/MyScripts")*@

</head>
<body>
    <nav class="nav">
        <div class="container">
            <div class="navbar">
                <div class="left_nav">
                    <ul></ul>
                </div>
                <div class="right_nav">
                    <ul>
                        <li>
                            <a href="~/account/projecthomepage">
                                <i class="fas fa-home"></i>
                                <div>Home</div>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <i class="fas fa-bell"></i>
                                <div>Notifiactions</div>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="fas fa-sign-out-alt"></i>
                                <div>
                                    Log off
                                </div>
                            </a>
                        </li>
                        <li class="last_item">
                            <a href="~/account/ProfilePage">
                                @*<div class="myphoto" style="background-size:cover;background-image:url(/Images/@currentuser.ImageURL);border: 1px solid white;"></div>*@
                                <div>Me <i class="fas fa-caret-down"></i> </div>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>

    </nav>

    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

        }
    }
    else
    {

    }

    <div class=" body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - PEBS &reg; All Rights Reserved To Moamen Shehata &amp; Ahmed Oweda &amp; Ahmed Ben Alaa &amp; Amr Rizk.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/THREE_JS")*@
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
